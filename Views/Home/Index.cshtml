@model UserEmailModel
@{
    ViewBag.Title = "Home";
}

<body>

    <form asp-action="Index" asp-controller="Home">
        
        <div class="form-group">
            <label asp-for="UserName"></label>
            <input class="form-control" asp-for="UserName" width="30"/>
            <span asp-validation-for="UserName"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="UserEmail"></label>
            <input class="form-control" asp-for="UserEmail" width="30"/>
            <span asp-validation-for="UserEmail"></span>
        </div>
        <div class="form-group">
            <label asp-for="UserMessage"></label>
            <textarea class="form-control" asp-for="UserMessage" cols="30" rows="5"></textarea>
            <span asp-validation-for="UserMessage"></span>
        </div>
        <button type="submit" class="btn-block">Submit</button>
    </form>

</body>

    
